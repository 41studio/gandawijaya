<div class="container">
  <div class="row">
    <div class="col-md-8">
		<h2>Sign up</h2>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= f.error_notification %>

		  <div class="form-group">
		    <%= f.input :username, required: true, autofocus: true, input_html: { class: "form-control" } %>
		    <%= f.input :first_name, required: true, input_html: { class: "form-control" } %>
		    <%= f.input :last_name, required: true, input_html: { class: "form-control" } %>
		    <%= f.input :email, required: true, input_html: { class: "form-control" } %>
		    <%= f.input :neighborhood, required: true, input_html: { class: "form-control"} %>
		    <%= f.input :address, required: true, input_html: { class: "form-control"} %>
		    <%= f.input :handphone, required: true, input_html: { class: "form-control"} %>
		    Image
			<%= f.file_field :image, required: true, input_html: { class: 'form-control' } %>
			<%= f.input :gender, :as => :select, :collection => ["Male", "Female"], required: true, input_html: { class: "form-control"} %>
			<%= f.input :birthday, required: true, input_html: { class: "form-control"} %>
			<%= f.input :subscribe, required: true %>
			<%= f.input :term_of_user, required: true %>
			<%= f.input :status, required: true, input_html: { class: "form-control"} %>
			<%= f.input :last_ip, required: true, input_html: { class: "form-control"} %>
			<%= f.input :user_agent, required: true, input_html: { class: "form-control"} %>
		    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control" }%>
		    <%= f.input :password_confirmation, required: true, input_html: { class: "form-control" } %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
