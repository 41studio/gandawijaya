.modal.fade id="rate" role="dialog"
  .modal-dialog
    .modal-content
      .modal-header
        button type="button" class="close" data-dismiss="modal" aria-label="Close"
          span aria-hidden="true"&times;
        h4 class="modal-title" Modal title
      = simple_form_for @review do |f|
        .modal-body
          = f.input :content
          .starRate
            span.star-rating
              input name="rating" type="radio" value="1"
                i
              input name="rating" type="radio" value="2"
                i
              input name="rating" type="radio" value="3"
                i
              input name="rating" type="radio" value="4"
                i
              input name="rating" type="radio" value="5"
                i
            strong.choice Choose a rating

          = f.hidden_field :rate_point
          = f.hidden_field :reviewable_id, value: reviewable_id
          = f.hidden_field :reviewable_type,  value: reviewable_type
        .modal-footer
          button type="button" class="btn btn-default" data-dismiss="modal"Close
          = f.button :submit, class: "btn btn-primary"
